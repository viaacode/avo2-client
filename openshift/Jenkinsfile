		stage('Deploy TST') {
			when {
				anyOf {
				    branch 'develop';
				}
			}
			steps {
				container('oc') {
                    // tagNewImage('tst') custom buimd with debug tools
                    script {
                        sh """#!/bin/bash
                        oc project $OC_PROJECT
                        oc start-build --follow=true -e DEBUG_TOOLS=true --build-arg DEBUG_TOOLS=true client-tst
                        """
                    }
				}
